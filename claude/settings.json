{
  "model": "opus",
  "enabledPlugins": {
    "claude-hud@claude-hud": true
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c '\"/usr/local/bin/node\" \"$(realpath \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)dist/index.js\")\"'"
  },
  "permissions": {
    "deny": ["Task(Explore)"]
  },
  "hooks": {
    "onTaskInvoke": {
      "message": "Check .claude/agents/ before using Explore"
    }
  },
  "fileSuggestion": {
    "type": "command",
    "command": "~/.claude/scripts/file-suggestion.sh"
  }
}
