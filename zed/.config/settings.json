    "csharp": true,
    "min-theme": true,
    "symbols": true,
    "editorconfig": true,
    "catppuccin-icons": true,
  },
  "git": {
    "path_style": "file_path_first",
    "branch_picker": {
      "show_author_name": true,
    },
    "hunk_style": "staged_hollow",
    "inline_blame": {
      "delay_ms": 0,
      "enabled": true,
    },
    "git_gutter": "tracked_files",
    "blame": {
      "show_avatar": true,
